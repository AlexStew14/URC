@{
    ViewData["Title"] = "Home Page";
}

<body class="gray-background">
    <main id="home-page-main">
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/resized-research.jpg" class="d-block w-100" alt="Building on University of Utah's campus">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Welcome to Research at the University of Utah</h5>
                        <p>Find all research opportunities here!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/resized-uofu-campus.jpg" class="d-block w-100" alt="University of Utah's campus">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Success Stories</h5>
                        <p>Checkout others' research experiences here at the U! Just follow the links below.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/resized-uofu.jpg" class="d-block w-100" alt="University of Utah logo">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Fill out an application today!</h5>
                        <p>Follow the links below to get started.</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- Three columns of text below the carousel -->
        <div id="marketing-table-container" class="row">
            <div class="col-lg-4">
                <img class="img-circle" src="~/images/uofu.jpg" alt="University of Utah logo" width="140" height="140">
                <h2>Discover</h2>
                <p>Browse all research opportunities available at the University of Utah.</p>
                <p><a class="btn btn-default" href="/Opportunities" role="button">View details &raquo;</a></p>
            </div>
            <div class="col-lg-4">
                <img class="img-circle" src="~/images/uofu.jpg" alt="University of Utah logo" width="140" height="140">
                <h2>Be Amazed</h2>
                <p>Discover what is possible here at the U. Hear from other students' experiences and successes.</p>
                <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>
            </div>
            <div class="col-lg-4">
                <img class="img-circle" src="~/images/uofu.jpg" alt="University of Utah logo" width="140" height="140">
                <h2>Apply</h2>
                <p>Follow the link below to get started and fill out an application today!</p>
                <p><a class="btn btn-default" href="/Student/Application" role="button">View details &raquo;</a></p>
            </div>
        </div>
    </main>
</body>
