@model URC.Models.Student

@{
    ViewData["Title"] = "Create";
}

<body class="body-research-background text-light">
    <div class="header-container" id="header-container-opp-page">
        <img id="header-image-opp-page" src="~/images/research-medium.jpg" alt="Picture of building on University of Utah campus" />
        <div class="header-title">Create Student Profile</div>
    </div>
    <div class="row gray-background round-corners">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Uid" class="control-label"></label>
                    <input asp-for="Uid" class="form-control" />
                    <span asp-validation-for="Uid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Student Name</label>
                    <input asp-for="StudentName" class="form-control" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Skills" class="control-label"></label>
                    <input asp-for="Skills" class="form-control" />
                    <span asp-validation-for="Skills" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Completed Courses</label>
                    <input asp-for="FinishedCourses" class="form-control" />
                    <span asp-validation-for="FinishedCourses" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Interests</label>
                    <input asp-for="StudentInterests" class="form-control" />
                    <span asp-validation-for="StudentInterests" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Available Hrs/Week</label>
                    <input asp-for="AvailableHoursPerWeek" class="form-control" />
                    <span asp-validation-for="AvailableHoursPerWeek" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Degree</label>
                    <input asp-for="DegreePlan" class="form-control" />
                    <span asp-validation-for="DegreePlan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Personal Statement</label>
                    <textarea asp-for="PersonalStatement" class="form-control"></textarea>
                    <span asp-validation-for="PersonalStatement" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Expected Graduation Date</label>
                    <input asp-for="ExpectedGraduationDate" class="form-control" />
                    <span asp-validation-for="ExpectedGraduationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GPA" class="control-label"></label>
                    <input asp-for="GPA" class="form-control" />
                    <span asp-validation-for="GPA" class="text-danger"></span>
                </div>
                <div data-toggle="tooltip" data-placement="right" title="Represents whether you are currently looking for a research opportunity" class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index"><button type="button" class="btn btn-secondary">Cancel</button></a>
                </div>
            </form>
        </div>
    </div>
</body>


